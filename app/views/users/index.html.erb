<p id="notice"><%= notice %></p>

<div class="container">
  <% @users.each do |user| %>
    <%= link_to user, style: "text-decoratoin:none" do %>
      <div class="row">
        <div class="col-sm-12">
          <div class="row">
            <div class="col-sm-2">

            <% if user.image? %>
              <%= image_tag user.image.url, class:"rounded-circle w-100"%>
            <% else %>
            <% end %>

            </div>
            <div class="col-sm-10">
              <strong><%= user.name %></strong>(<%= user.age %>)<br>
              <%= user.company %> / <%= user.position %><br>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
